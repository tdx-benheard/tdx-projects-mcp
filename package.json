{
  "name": "tdx-projects-mcp",
  "version": "1.0.0",
  "description": "MCP server for TeamDynamix Projects and Issues API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "postinstall": "npm run build",
    "setup": "npm install && tsx scripts/setup-env-config.ts",
    "setup-with-claude": "npm install && tsx scripts/setup-env-config.ts --from-claude",
    "setup-advanced": "npm install && tsx scripts/setup-env-config.ts --advanced",
    "test:api": "tsx src/test.ts",
    "test:prod": "tsx src/test-prod.ts",
    "test:test": "tsx src/test-test.ts",
    "test:canary": "tsx src/test-canary.ts"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  }
}
